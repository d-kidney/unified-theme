{% comment %} Build4Less slideshow content {% endcomment %}

<div class="slideshow-wrapper">
  <slideshow-component
    class="slideshow"
    data-layout="{{ 'grid' }}"
    data-slide-height="{{ 'adapt_image' }}"
    data-auto-rotate="{{ true }}"
    data-change-speed="{{ 5 }}"
