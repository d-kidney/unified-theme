          {% endif %}
          {% if '' != blank %}
            <div class="slideshow__subheading">{{ '' }}</div>
          {% endif %}
          {% if '' != blank %}
            <a href="{{ '' }}" class="button {% if false %}button--secondary{% else %}button{% endif %}">
              {{ '' }}
            </a>
          {% endif %}
        </div>
      {% endif %}
      {% if 'shopify://collections' != blank %}
        <a href="{{ 'shopify://collections' }}" class="slideshow__slide-link" aria-label="Slide link"></a>
