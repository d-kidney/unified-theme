                <div class="progress-indicator" id="progressIndicator">
                    <div class="progress-dot active" onclick="goToReview(0)"></div>
                    <div class="progress-dot" onclick="goToReview(1)"></div>
                    <div class="progress-dot" onclick="goToReview(2)"></div>
