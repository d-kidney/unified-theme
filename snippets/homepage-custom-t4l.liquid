        <a href="/pages/reviews" class="cta-link">View All Reviews</a>
    </div>

    <script>
        const reviewSnippets = [
            {
                text: "Tried to find 690 x 240 tiles to match old broken ones, and Tiles4Less were very helpful on the phone, locating the right tiles. That was on a Thursday, and the tiles arrived early Monday morning.",
                author: "Sarah M."
            },
            {
                text: "Very fast feedback on queries and good price.\n\nRyan Hill there was great at sending samples, the order process and support on queries.",
                author: "Michael Ryan"
            },
            {
                text: "Great service! Very easy to order online, great communications and quick delivery. Tiles came perfectly packaged and delivery was flawless. Would highly recommend.",
                author: "JWilliam"
            },
            {
                text: "After I placed my order, I contacted the company about a specific delivery request, and they responded quickly and positively. The tiles came quickly, through the agency of a company local to me, and were as described.",
                author: "Catherine Tailby"
            },
            {
                text: "Online order for Indian sandstone patio slabs. Ordered online after a few questions answered by Darren over the telephone and by email. He was very helpful. Product arrived (on three pallets) within only a few days, delivery driver very personable and helpful.",
                author: "Amanda T."
            },
            {
                text: "The slabs had been very well packaged in wooden crates, plastic bound on wooden pallets. Excellent quality slabs purchased to lay a patio. No hesitation in recommending this company.",
                author: "Robert H."
            },
            {
                text: "Superb service and extremely helpful. Will definitely be using Tiles4less on our next refurb.",
                author: "Julie Culhane"
            }
        ];

        let currentReviewIndex = 0;
        let cyclingInterval;

        function updateProgressIndicator() {
            const dots = document.querySelectorAll('.progress-dot');
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentReviewIndex);
            });
        }

        function updateReview(reviewIndex) {
            const review = reviewSnippets[reviewIndex];
            const reviewContainer = document.getElementById('reviewSnippet');
            
            // Fade out current review
            reviewContainer.classList.remove('fade-in');
            reviewContainer.classList.add('fade-out');
            
            setTimeout(() => {
                reviewContainer.innerHTML = 
                    '<div class="review-text">"' + review.text + '"</div>' +
                    '<div class="review-author">— ' + review.author + '</div>';
                
                // Fade in new review
                reviewContainer.classList.remove('fade-out');
                reviewContainer.classList.add('fade-in');
                
                updateProgressIndicator();
            }, 250);
        }

        function cycleToNextReview() {
            currentReviewIndex = (currentReviewIndex + 1) % reviewSnippets.length;
            updateReview(currentReviewIndex);
        }

        function goToReview(index) {
            if (index !== currentReviewIndex) {
                currentReviewIndex = index;
                updateReview(currentReviewIndex);
                // Reset the cycling timer
                stopCycling();
                startCycling();
            }
        }

        function startCycling() {
            // Clear any existing interval first
            stopCycling();
            cyclingInterval = setInterval(cycleToNextReview, 10000);
        }

        function stopCycling() {
            if (cyclingInterval) {
                clearInterval(cyclingInterval);
                cyclingInterval = null;
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing reviews...');
            updateProgressIndicator();
            startCycling();
            
            // Pause cycling when user hovers over the review container
            const reviewContainer = document.querySelector('.review-container');
            if (reviewContainer) {
                reviewContainer.addEventListener('mouseenter', stopCycling);
                reviewContainer.addEventListener('mouseleave', startCycling);
            }
        });

        // Handle page visibility changes to pause/resume cycling
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                stopCycling();
            } else {
                startCycling();
            }
        });
    </script>
</body>
