<!doctype html>
<html class="js" lang="{{ request.locale.iso_code }}">
  <head>
    <!-- Store Detection -->
    {% assign store_id = 'unknown' %}
    {% if shop.permanent_domain contains 'build4less' %}
      {% assign store_id = 'b4l' %}
    {% elsif shop.permanent_domain contains 'building-supplies-online' or shop.permanent_domain contains 'buildingsuppliesonline' %}
      {% assign store_id = 'bso' %}
    {% elsif shop.permanent_domain contains 'insulation4less' and shop.permanent_domain contains '.myshopify.com' %}
      {% assign store_id = 'i4l' %}
    {% elsif shop.permanent_domain contains 'insulation4us' %}
      {% assign store_id = 'i4us' %}
    {% elsif shop.permanent_domain contains 'roofing4us' %}
      {% assign store_id = 'r4us' %}
    {% elsif shop.permanent_domain contains 'tiles4less' %}
      {% assign store_id = 't4l' %}
    {% endif %}

    <!-- Shoplift Script for Build4Less -->
    {% if store_id == 'b4l' %}
      {% render 'shoplift' %}
    {% endif %}

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <meta name="robots" content="INDEX,FOLLOW"/>

    <!-- Canonical URLs -->
    {%- if canonical_url != blank -%}
      {%- if request.page_type == 'collection' -%}
        {%- if collection.metafields.global['alt-canonical'] -%}
          <link rel="canonical" href="{{ collection.metafields.global.alt-canonical }}">
        {%- else -%}
          <link rel="canonical" href="{{ canonical_url | split: "?page=" | first }}">
        {%- endif -%}
      {%- elsif request.page_type == 'product' -%}
        {%- if product.metafields.global['alt-canonical'] -%}
          <link rel="canonical" href="{{ product.metafields.global.alt-canonical }}">
        {%- else -%}
          <link rel="canonical" href="{{ canonical_url | split: "?page=" | first }}">
        {%- endif -%}
      {%- else -%}
        <link rel="canonical" href="{{ canonical_url }}">
      {%- endif -%}
    {%- endif -%}

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <!-- SEO Title -->
    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <!-- Shopify Required Header Content -->
    {{ content_for_header }}

    <!-- Store-specific styles -->
    {% case store_id %}
      {% when 'b4l' %}
        {{ 'base_b4l.css' | asset_url | stylesheet_tag }}
        {{ 'custom_b4l.css' | asset_url | stylesheet_tag }}
      {% when 'bso' %}
        {{ 'base_bso.css' | asset_url | stylesheet_tag }}
        {{ 'custom_bso.css' | asset_url | stylesheet_tag }}
      {% when 'i4l' %}
        {{ 'base_i4l.css' | asset_url | stylesheet_tag }}
        {{ 'custom_i4l.css' | asset_url | stylesheet_tag }}
      {% when 'i4us' %}
        {{ 'base_i4us.css' | asset_url | stylesheet_tag }}
        {{ 'custom_i4us.css' | asset_url | stylesheet_tag }}
      {% when 'r4us' %}
        {{ 'base_r4us.css' | asset_url | stylesheet_tag }}
        {{ 'custom_r4us.css' | asset_url | stylesheet_tag }}
      {% when 't4l' %}
        {{ 'base_t4l.css' | asset_url | stylesheet_tag }}
        {{ 'custom_t4l.css' | asset_url | stylesheet_tag }}
    {% endcase %}

    <!-- Common JavaScript -->
    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
      window.storeConfig = {
        storeId: '{{ store_id }}',
        storeDomain: '{{ shop.permanent_domain }}'
      };
    </script>
  </head>

  <body class="gradient">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{ "accessibility.skip_to_text" | t }}
    </a>

    <!-- Header -->
    {% case store_id %}
      {% when 'b4l' %}
        {%- section 'header_b4l' -%}
      {% when 'bso' %}
        {%- section 'header_bso' -%}
      {% when 'i4l' %}
        {%- section 'header_i4l' -%}
      {% when 'i4us' %}
        {%- section 'header_i4us' -%}
      {% when 'r4us' %}
        {%- section 'header_r4us' -%}
      {% when 't4l' %}
        {%- section 'header_t4l' -%}
      {% else %}
        {%- section 'header' -%}
    {% endcase %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
        unavailable_with_option: `{{ 'products.product.value_unavailable' | t: option_value: '[value]' }}`,
      }
    </script>

    <!-- Store-specific scripts -->
    {% case store_id %}
      {% when 'b4l' %}
        {% render 'main-script_b4l' %}
        <script src="{{ 'global_b4l.js' | asset_url }}" defer></script>
        <script src="{{ 'cart_b4l.js' | asset_url }}" defer></script>
      {% when 'bso' %}
        {% render 'main-script_bso' %}
        <script src="{{ 'global_bso.js' | asset_url }}" defer></script>
        <script src="{{ 'cart_bso.js' | asset_url }}" defer></script>
      {% when 'i4l' %}
        {% render 'main-script_i4l' %}
        <script src="{{ 'global_i4l.js' | asset_url }}" defer></script>
        <script src="{{ 'cart_i4l.js' | asset_url }}" defer></script>
      {% when 'i4us' %}
        {% render 'main-script_i4us' %}
        <script src="{{ 'global_i4us_r4us.js' | asset_url }}" defer></script>
        <script src="{{ 'cart_i4us.js' | asset_url }}" defer></script>
      {% when 'r4us' %}
        {% render 'main-script_r4us' %}
        <script src="{{ 'global_i4us_r4us.js' | asset_url }}" defer></script>
        <script src="{{ 'cart_r4us.js' | asset_url }}" defer></script>
      {% when 't4l' %}
        {% render 'main-script_t4l' %}
        <script src="{{ 'global_t4l.js' | asset_url }}" defer></script>
        <script src="{{ 'cart_t4l.js' | asset_url }}" defer></script>
    {% endcase %}

    <!-- Clerk Tracking -->
    {% case store_id %}
      {% when 'b4l', 't4l' %}
        {% render 'clerk-tracking_b4l_t4l' %}
      {% when 'i4l', 'i4us', 'r4us' %}
        {% render 'clerk-tracking_i4l_i4us_r4us' %}
    {% endcase %}
  </body>
</html>